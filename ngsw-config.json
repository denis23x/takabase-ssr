{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets-prefetch",
      "installMode": "prefetch",
      "updateMode": "lazy",
      "resources": {
        "files": [
          "/assets/backgrounds/**",
          "/assets/emoji/**",
          "/assets/grammars/**",
          "/assets/icons/favicon/**",
          "/assets/markdown/**"
        ]
      }
    },
    {
      "name": "assets-lazy",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/*.(svg|jpg|jpeg|png|md|webp|js|css|json|gif|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api",
      "urls": [
        "https://draft-api.web.app/api/*"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "30d",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "api-freshness",
      "urls": [
        "https://firebasestorage.googleapis.com/v0/b/*",
        "https://fonts.googleapis.com/*"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "180d",
        "timeout": "10s",
        "strategy": "freshness"
      }
    }
  ]
}
