{
  "name": "draft-ssr",
  "version": "0.0.1",
  "description": "Node frontend project",
  "author": "Denis Iakimenko",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "spa:start:dev": "ng run draft-ssr:serve:development --disable-host-check",
    "spa:start:prod": "ng run draft-ssr:serve:production",
    "spa:build:dev": "ng run draft-ssr:build:development",
    "spa:build:prod": "ng run draft-ssr:build:production",
    "ssr:start:dev": "ng run draft-ssr:serve-ssr:development",
    "ssr:start:prod": "ng run draft-ssr:serve-ssr:production",
    "ssr:build:dev": "ng run draft-ssr:build:development && ng run draft-ssr:server:development",
    "ssr:build:prod": "ng run draft-ssr:build:production && ng run draft-ssr:server:production",
    "ssr:prerender:dev": "ng run draft-ssr:prerender:development",
    "ssr:prerender:prod": "ng run draft-ssr:prerender:production",
    "spite:build": "svg2sprite ./src/assets/icons/bootstrap ./src/assets/icons/sprite.svg --stripAttrs class --stripAttrs fill",
    "dist:start": "node dist/draft-ssr/server/main.js",
    "dist:analyze": "webpack-bundle-analyzer dist/draft-ssr/browser/stats.json"
  },
  "dependencies": {
    "@angular/common": "^15.1.0",
    "@angular/compiler": "^15.1.0",
    "@angular/core": "^15.1.0",
    "@angular/forms": "^15.1.0",
    "@angular/platform-browser": "^15.1.0",
    "@angular/platform-browser-dynamic": "^15.1.0",
    "@angular/platform-server": "^15.1.0",
    "@angular/router": "^15.1.0",
    "@angular/service-worker": "^15.1.0",
    "@fingerprintjs/fingerprintjs": "^3.3.6",
    "@nguniversal/express-engine": "^15.1.0",
    "daisyui": "^2.45.0",
    "dayjs": "^1.11.5",
    "dompurify": "^2.4.0",
    "emoji-mart": "^5.5.2",
    "express": "^4.18.2",
    "incremental-dom": "^0.7.0",
    "jdenticon": "^3.2.0",
    "markdown-it": "^13.0.1",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-incremental-dom": "^2.1.0",
    "markdown-it-link-attributes": "^4.0.1",
    "ngx-image-cropper": "^6.2.2",
    "prismjs": "^1.29.0",
    "rxjs": "~7.5.7",
    "tslib": "^2.4.0",
    "ua-parser-js": "^1.0.33",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.1",
    "@angular/cli": "^15.1.1",
    "@angular/compiler-cli": "^15.1.0",
    "@nguniversal/builders": "^15.1.0",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "@types/compression": "^1.7.2",
    "@types/dompurify": "^2.3.4",
    "@types/express": "^4.17.14",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-emoji": "^2.0.2",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/node": "^16.11.66",
    "@types/prismjs": "^1.26.0",
    "@types/ua-parser-js": "^0.7.36",
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-attributes": "^0.0.5",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "svg2sprite-cli": "^2.0.1",
    "tailwindcss": "^3.1.8",
    "typescript": "~4.9.4",
    "webpack-bundle-analyzer": "^4.7.0"
  }
}
